<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-28dp"
        android:layout_marginTop="-8dp"
        android:src="@drawable/gambar2" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/back"
        android:id="@+id/backLogin"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_marginTop="-163dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/karakter"
        android:layout_width="202dp"
        android:layout_height="212dp"
        android:layout_below="@id/text1"
        android:layout_marginTop="-12dp"
        android:src="@drawable/gambar3"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/karakter"
        android:padding="20dp"
        android:id="@+id/layout1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_shape"
            android:hint="Email"
            android:backgroundTint="@color/grey"
            android:paddingLeft="10dp"
            android:id="@+id/input1_login"
            android:textColorHint="@color/black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_shape"
            android:hint="@string/password"
            android:backgroundTint="@color/grey"
            android:paddingStart="10dp"
            android:id="@+id/input2_login"
            android:textColorHint="@color/black"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text2_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:text="@string/forgot_password"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn1_login"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="300dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn1_login"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Dont have an account? "
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text4_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/sign_up"
            android:textColor="@color/green"
            android:textSize="15sp"/>

    </LinearLayout>


</RelativeLayout>