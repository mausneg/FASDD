<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:background="@color/white">

    <ImageView
        android:id="@+id/gambar1_epro"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-83dp"
        android:src="@drawable/gambar5" />

    <ImageView
        android:id="@+id/backEpro"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="46dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/text1_Epro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambar1_epro"
        android:layout_marginTop="-190dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/gambar2_epro"
        android:layout_width="205dp"
        android:layout_height="269dp"
        android:layout_below="@id/gambar1_epro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-149dp"
        android:src="@drawable/profile" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambar2_epro"
        android:layout_marginTop="-42dp"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/text2_epro"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="Full name"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/input1_epro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_shape"
            android:backgroundTint="@color/grey"
            android:hint="Victoria Robertson"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black" />

        <TextView
            android:id="@+id/text3_epro"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:hint="Email"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/input2_pro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_shape"
            android:backgroundTint="@color/grey"
            android:hint="victor.robert9@unram.ac.id"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black" />

        <TextView
            android:id="@+id/text4_epro"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:hint="Password"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/input3_epro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_shape"
            android:backgroundTint="@color/grey"
            android:hint="victor123"
            android:paddingStart="10dp"
            android:textColorHint="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btn1_epro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginTop="0dp"
        android:width="350dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppinssemibold"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

</RelativeLayout>