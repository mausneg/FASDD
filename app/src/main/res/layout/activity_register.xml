<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-28dp"
        android:layout_marginTop="-8dp"
        android:src="@drawable/gambar2" />

    <ImageView
        android:id="@+id/backRegister"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_marginTop="-190dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/karakter"
        android:layout_width="266dp"
        android:layout_height="170dp"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/gambar4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/karakter"
        android:padding="20dp"
        android:id="@+id/layout1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_shape"
            android:hint="Insert Your Full Name"
            android:backgroundTint="@color/grey"
            android:paddingLeft="10dp"
            android:id="@+id/input1_regis"
            android:textColorHint="@color/black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_shape"
            android:hint="Insert Your E-Mail"
            android:backgroundTint="@color/grey"
            android:paddingStart="10dp"
            android:id="@+id/input2_regis"
            android:textColorHint="@color/black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_shape"
            android:hint="Create Password"
            android:backgroundTint="@color/grey"
            android:paddingStart="10dp"
            android:id="@+id/input3_regis"
            android:textColorHint="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_shape"
            android:hint="Confirm Password"
            android:backgroundTint="@color/grey"
            android:paddingStart="10dp"
            android:id="@+id/input4_regis"
            android:textColorHint="@color/black"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn1_regis"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppinssemibold"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn1_regis"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Already have an account? "
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text4_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/login"
            android:textColor="@color/green"
            android:textSize="15sp"/>

    </LinearLayout>


</RelativeLayout>